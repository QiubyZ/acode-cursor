
{
    "compilerOptions": {
        "target": "es2020",
        "module": "ESNext",
        "moduleResolution": "node16",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "exclude": ["./dist/**/*", "./postcss.config.js"]
}